<div class="card-body">
    <div>
        <%= form_with model: @category do |form| %>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <%= form.text_field :name, length: 15, class: "form-control"%>
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <%= form.text_area :description, length: 15, class: "form-control", size: "60x10"%>
            </div>
            <div class="text-center">
                <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
                <%= link_to 'Cancelar', categories_path, class: "btn btn-lg bg-gradient-light text-primary btn-lg w-100 mt-4 mb-0" %>
            </div>
        <% end %>
    </div>
</div>