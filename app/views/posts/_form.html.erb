<div class="card-body">
    <div>
        <%= form_with model: @post do |form| %>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <p class="text-rose m-2 font-weight-bold">  Título : </p>
                <%= form.text_field :name, class: "form-control", maxlength: 50 %>
            </div>
            <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Resumo : </p>
                <label class="form-label"></label>
                <%= form.text_field :summary, class: "form-control", maxlength: 300 %>
            </div>
            <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Conteúdo : </p>
                <label class="form-label"></label>
                <%= form.text_area :content, class: "form-control", maxlength: 3000, size: "60x10" %>
            </div>
            <div class="input-group input-group-outline mb-3">
            <p class="text-rose m-2 font-weight-bold">  Categorias : </p>
            <label class="form-label"></label>
            <ul>
                <% @categories.each do |category| %>
                    <li>
                        <%= check_box_tag 'category_ids[]', category.id, @post_cats.filter {|a| a.category_id == category.id}.present? -%>
                        <%= h category.name -%>
                        <% %>
                    </li>
                <% end %>
                </ul>
        </div>
            <div class="input-group input-group-outline mb-3">
                <%= form.file_field :image %>
            </div>

            <div class="text-center">
                <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
                <%= link_to 'Cancelar', posts_path, class: "btn btn-lg bg-gradient-light text-primary btn-lg w-100 mt-4 mb-0" %>
            </div>
        <% end %>
    </div>
</div>