<div class="card-body">
    <div>
        <%= form_with model: @post do |form| %>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <%= form.text_field :summary, class: "form-control" %>
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <%= form.text_field :content, class: "form-control" %>
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <%= form.select(:user_id, @users.collect { |user| [user.email, user.id]}, prompt: 'select')%>
            </div>
            <div class="input-group input-group-outline mb-3">
                <%= form.file_field :image %>
            </div>

            <div class="text-center">
                <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
                <%= link_to 'Cancelar', posts_path, class: "btn btn-lg bg-gradient-light text-primary btn-lg w-100 mt-4 mb-0" %>
            </div>
        <% end %>
    </div>
</div>