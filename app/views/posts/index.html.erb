<div class="card-body px-0 pb-2">
    <div class="table-responsive p-0">
        <table class="table align-items-center mb-0">
            <%= link_to new_post_path, class: "btn btn-primary" do %>
                novo
                <i class="fas fa-plus"></i>
            <% end %>
            <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Titulo</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Media de Avaliação</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Imagem</th>
                    <th class="text-secondary opacity-7"></th>
                </tr>
            </thead>
            <tbody>
                <% @posts.each do |post|%>
                    <tr>
                        <td>
                            <p class="font-weight-bold mb-0"><%= post.name %></p>
                        </td>
                        <td>
                            <p class="font-weight-bold mb-0"><%= post.media %></p>
                        </td>
                        <td>
                            <%= image_tag post.image.variant(resize_to_limit: [100, 100]) %>
                        </td>
                        <td class="align-middle">
                            <%= link_to 'Editar', edit_post_path(id: post.id), class: "btn btn-sm text-secondary font-weight-bold" %>
                            <%= link_to 'Deletar', post_path(id: post.id), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm text-white bg-primary font-weight-bold" %>
                        </td>
                    </tr>
                <% end %>
                </tr>
            </tbody>
        </table>
    </div>
</div>