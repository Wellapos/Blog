<div class="container">
  <div class="bg-grandient-dark">
    <span id='topo'></span>
    <h1>O blog est√° carregando</h1>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @posts.each do |post|%>
      <div class="col">
        <div class="card bg-gradient-secondary shadow-dark">
          <div class="card-body">
            <%= link_to home_post_path(id: post.id),class:"card h-100 bg-gradient-secondary" do%>
              <%=image_tag post.image.variant(resize_to_fill: [492, 487])%>
            <%end%>
            <h5 class="card-title"><%= link_to post.name, home_post_path(id: post.id)%></h5>
            <p class="card-text"><%= link_to post.summary, home_post_path(id: post.id)%></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>