<% @comments.each do |comment|%>
    <% if @post.id == comment.post_id%>
        <div class="row align-items-start shadow-info">
            <hr>
            <div class="col-2 fas fa-user">
                <%= comment.content%>
                <%= comment.user.email%>
                <%= comment.created_at%>
            </div>
            <div class="col-4">
                
            </div>
            <div class="col-5">
                <%= link_to 'Deletar', comment_path(id: comment.id), method: :delete, data: { confirm: "Tem certeza?" }, class: "fas fa-trash d-flex justify-content-end" %>
            </div>
        </div>
        <br>
        <% else %>
    <% end%>
<% end %>