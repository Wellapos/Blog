<div class="container mt-5 translate-rightcard-body px-0 pb-2" >
    <div class="table-responsive p-0">
        <table class="table align-items-center mb-0">
            <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Comentarios</th>
                    <th class="text-secondary opacity-7"></th>
                </tr>
            </thead>
            <tbody>
                <% @comments.each do |comment|%>
                    <tr>
                        <td>
                            <p class="text-xs font-weight-bold mb-0"><%= comment.content %></p>
                        </td>
                        <td class="align-middle">
                            <%= link_to 'Deletar', comment_path(comment), method: :delete, data: { confirm: "Tem certeza?" }, class: "fas fa-trash d-flex justify-content-end" %>
                        </td>
                    </tr>
                <% end %>
                </tr>
            </tbody>
        </table>
    </div>
</div>