<div class="card-body">
    <div>
        <%= form_with model: @user do |form| %>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label"></label>
                <p class="text-rose m-2 font-weight-bold">  Email : </p>
                <%= form.text_field :email, class: "form-control", maxlength: 50 %>
            </div>
            <div class="input-group input-group-outline mb-3">
                <p class="text-rose m-2 font-weight-bold">  Password : </p>
                <label class="form-label"></label>
                <%= form.text_field :password, class: "form-control", maxlength: 50 %>
            </div>
            <div class="text-center">
                <%= form.submit 'Salvar', class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
                <%= link_to 'Cancelar', users_path, class: "btn btn-lg bg-gradient-light text-primary btn-lg w-100 mt-4 mb-0" %>
            </div>
        <% end %>
    </div>
</div>